# Default provider
provider "aws" {
  region = "{{ provider_region }}"
  assume_role {
    role_arn = "{{ aft_admin_role_arn }}"
  }
}

# Regional provider aliases - hardcoded to avoid Jinja/locals dependency issues
provider "aws" {
  alias  = "us_east_1"
  region = "us-east-1"
  assume_role {
    role_arn = "{{ target_admin_role_arn }}"
  }
}

provider "aws" {
  alias  = "eu_west_2"
  region = "eu-west-2"
  assume_role {
    role_arn = "{{ target_admin_role_arn }}"
  }
}

